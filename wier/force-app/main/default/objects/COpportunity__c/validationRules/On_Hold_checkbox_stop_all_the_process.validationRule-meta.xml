<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>On_Hold_checkbox_stop_all_the_process</fullName>
    <active>true</active>
    <description>On_Hold_Validation</description>
    <errorConditionFormula>AND( ISCHANGED( Status__c ) , On_Hold__c =TRUE)</errorConditionFormula>
