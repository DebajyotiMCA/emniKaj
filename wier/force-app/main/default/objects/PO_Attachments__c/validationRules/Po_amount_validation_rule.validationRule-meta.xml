<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Po_amount_validation_rule</fullName>
    <active>true</active>
    <description>Po amount validation rule</description>
    <errorConditionFormula>PO_Amount__c &lt; 1</errorConditionFormula>
    <errorDisplayField>PO_Amount__c</errorDisplayField>
    <errorMessage>Total amount as per Customer Order must be greater than zero.</errorMessage>
</ValidationRule>
